{
  "name": "react-dnd",
  "version": "11.1.3",
  "description": "Drag and Drop for React",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/react-dnd/react-dnd.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "gulp clean",
    "build": "gulp build",
    "watch": "gulp watch",
    "bundle": "gulp bundle"
  },
  "dependencies": {
    "@react-dnd/core": "workspace:packages/react-dnd-core",
    "@react-dnd/decorators": "workspace:packages/react-dnd-decorators",
    "@react-dnd/hooks": "workspace:packages/react-dnd-hooks"
  },
  "devDependencies": {
    "@react-dnd/build": "workspace:packages/build",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/node": "^14.14.28",
    "gulp": "^4.0.2",
    "react": "^17.0.1"
  },
  "peerDependencies": {
    "@types/hoist-non-react-statics": ">= 3.3.1",
    "@types/node": ">= 12",
    "@types/react": ">= 16",
    "react": ">= 16.14"
  },
  "peerDependenciesMeta": {
    "@types/hoist-non-react-statics": {
      "optional": true
    },
    "@types/node": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    }
  },
  "umd": {
    "name": "ReactDnD",
    "input": "dist/esm/index.js",
    "external": [
      "react",
      "react-dom"
    ],
    "globals": {
      "react": "React",
      "react-dom": "ReactDOM"
    },
    "alias": {
      "dnd-core": "dnd-core/dist/esm/index",
      "@react-dnd/core": "@react-dnd/core/dist/esm/index",
      "@react-dnd/hooks": "@react-dnd/hooks/dist/esm/index",
      "@react-dnd/decorators": "@react-dnd/decorators/dist/esm/index",
      "@react-dnd/types": "@react-dnd/types/dist/esm/index",
      "@react-dnd/internals": "@react-dnd/internals/dist/esm/index"
    }
  }
}
