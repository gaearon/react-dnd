{
	"name": "react-dnd",
	"version": "7.6.0",
	"description": "Drag and Drop for React",
	"main": "lib/index.js",
	"module": "lib/index.js",
	"types": "lib/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/react-dnd/react-dnd.git"
	},
	"license": "MIT",
	"scripts": {
		"clean": "rimraf lib dist",
		"bundle:unmin": "webpack --mode development --output-filename=ReactDnD.js",
		"bundle:min": "webpack --mode production --output-filename=ReactDnD.min.js",
		"transpile:esm": "tsc -b tsconfig.json",
		"transpile": "run-p transpile:*",
		"build": "run-p bundle:* transpile",
		"test": "run-s clean build",
		"start": "tsc -b tsconfig.json -w --preserveWatchOutput"
	},
	"dependencies": {
		"@types/hoist-non-react-statics": "^3.3.1",
		"dnd-core": "^7.6.0",
		"hoist-non-react-statics": "^3.3.0",
		"invariant": "^2.1.0",
		"shallowequal": "^1.1.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.4",
		"@babel/core": "^7.4.5",
		"@types/react": "^16.8.19",
		"@types/react-dom": "^16.8.4",
		"babel-loader": "^8.0.6",
		"npm-run-all": "^4.1.5",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"rimraf": "^2.6.3",
		"ts-loader": "^6.0.2",
		"typescript": "^3.5.1",
		"webpack": "^4.32.2",
		"webpack-cli": "^3.3.2"
	},
	"peerDependencies": {
		"react": ">= 16.8",
		"react-dom": ">= 16.8"
	}
}
